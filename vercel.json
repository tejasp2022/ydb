{
    "builds": [
        {
            "src": "podcast_generation/main.py",
            "use": "@vercel/python@3.1.0",
            "config": { "runtime": "python3.12" }
        },
        {
            "src": "landing_page/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "podcast_generation/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "landing_page/$1"
        }
    ]
}